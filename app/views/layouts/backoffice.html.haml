!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", "name" => "viewport"}/
    %title Moneys - Painel
    = csrf_meta_tags
    = stylesheet_link_tag    'application'
    = stylesheet_link_tag    'backoffice'
    = stylesheet_link_tag    'bootstrap-reset'
    = stylesheet_link_tag    'bucket-ico-fonts'
    = stylesheet_link_tag    'turquoise-theme'
    = stylesheet_link_tag    'style'
    = stylesheet_link_tag    'style-responsive'
    = javascript_include_tag 'Chart.bundle', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'chartkick', 'data-turbolinks-track': 'reload'
    = action_cable_meta_tag
    / HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/htmls5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    = yield :head
  %body.full-width
    %section#container.hr-menu
      / header start
      %header.header.fixed-top
        = render partial: 'layouts/backoffice_shared/navbar'
      / header end
      / sidebar end
      / main content start
      %section#main-content
        %section.wrapper
          / page start
          = flash_messages
          = render 'layouts/backoffice_shared/breadcrumb'
          - unless content_for(:header).blank?
            .row
              .col-sm-12
                %section.panel
                  %header.panel-heading
                    = content_for(:header)
                    %span.tools.pull-right
                      %a.fa.fa-chevron-down{:href => "javascript:;"}
                  .panel-body
                    = yield
          - else
            .row
              .col-sm-12
                = yield
          / page end
      / main content end
    = javascript_include_tag 'application'
    = javascript_include_tag 'backoffice'
    = javascript_include_tag 'scripts'
    = javascript_include_tag 'jquery.scrollTo.min'
    = javascript_include_tag 'jquery.nicescroll'
    = javascript_include_tag 'jquery.flot.animator.min'
    = javascript_include_tag 'jquery.dcjqaccordion.2.7'
    = javascript_include_tag 'sparkline/jquery.sparkline'
    = javascript_include_tag 'jQuery-slimScroll-1.3.0/jquery.slimscroll.min'
    = javascript_include_tag 'easypiechart/jquery.easypiechart.min'
    = gflash
    = render partial: 'layouts/backoffice_shared/analytics_backoffice'
    = yield :js
